<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    android:orientation="vertical"
    tools:context=".UpdateUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_margin="25dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo_design"/>

        <TextView
            android:id="@+id/titleOfThisActivity"
            android:layout_below="@+id/logoImageView"
            android:fontFamily="@font/chivo"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update My Details"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <RelativeLayout
            android:background="@drawable/edit"
            android:id="@+id/first_update_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleOfThisActivity"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/nameOfUpdateEmailLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Update Email" />

            <TextView
                android:id="@+id/currentEmailLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Email:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_below="@id/nameOfUpdateEmailLabel"/>

            <TextView
                android:id="@+id/currentEmailText"
                android:layout_below="@+id/currentEmailLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/updateEmailLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Email:"
                android:textColor="@android:color/black"
                android:layout_below="@+id/currentEmailText"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/updateEmailText"
                android:background="@drawable/edit2"
                android:layout_below="@+id/updateEmailLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:hint="Enter new email"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/emailUpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/updateEmailText"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/edit"
            android:id="@+id/second_update_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/first_update_activity"
            android:elevation="4dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/nameOfUpdatePhoneNumberLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Update Phone Number"/>

            <TextView
                android:id="@+id/currentPhoneLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameOfUpdatePhoneNumberLabel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/chivo"
                android:text="Current Phone:"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/currentPhoneText"
                android:layout_below="@+id/currentPhoneLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/updatePhoneLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Phone:"
                android:layout_below="@+id/currentPhoneText"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/updatePhoneText"
                android:background="@drawable/edit2"
                android:layout_below="@+id/updatePhoneLabel"
                android:fontFamily="@font/chivo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:hint="Enter new phone"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/phoneNumberUpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/updatePhoneText"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>