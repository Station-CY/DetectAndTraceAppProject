<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    tools:context=".QRCodeScannerActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scannerView"
        android:layout_height="450dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qrTextView"
        android:layout_below="@+id/scannerView"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="QR Code"
        android:fontFamily="@font/chivo"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/myLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIT Manukau"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/qrTextView"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/myLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIT Manukau"
        android:layout_centerInParent="true"
        android:layout_below="@+id/myLabel1"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/myLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIT Manukau"
        android:layout_centerInParent="true"
        android:layout_below="@+id/myLabel2"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/myLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIT Manukau"
        android:layout_centerInParent="true"
        android:layout_below="@+id/myLabel2"
        android:textSize="20sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="ADD"
        android:visibility="gone"/>


</RelativeLayout>